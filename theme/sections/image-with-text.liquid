<section class="image_with_text">
    <div class="container">
        <div class="d-flex image_with_text_wrap {% if section.settings.layout == 'text_first' %} image_with_text_grid_reverse{% endif %}">
            <div class="image_with_text_img">
                <div class="image_with_text_left">
                    {% if section.settings.image_with_text_image !=blank %}
                    {%- assign src_name = section.settings.image_with_text_image -%}
                    {%- assign src_alt = section.settings.image_with_text_image.alt -%}
                    {%- render 'srcset' with src_name:src_name,src_alt:src_alt, src_class:"img-fluid" -%}
                    {% else %}
                        <div class="default_image">
                            <svg class="placeholder-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 525.5 525.5"><path d="M324.5 212.7H203c-1.6 0-2.8 1.3-2.8 2.8V308c0 1.6 1.3 2.8 2.8 2.8h121.6c1.6 0 2.8-1.3 2.8-2.8v-92.5c0-1.6-1.3-2.8-2.9-2.8zm1.1 95.3c0 .6-.5 1.1-1.1 1.1H203c-.6 0-1.1-.5-1.1-1.1v-92.5c0-.6.5-1.1 1.1-1.1h121.6c.6 0 1.1.5 1.1 1.1V308z"></path><path d="M210.4 299.5H240v.1s.1 0 .2-.1h75.2v-76.2h-105v76.2zm1.8-7.2l20-20c1.6-1.6 3.8-2.5 6.1-2.5s4.5.9 6.1 2.5l1.5 1.5 16.8 16.8c-12.9 3.3-20.7 6.3-22.8 7.2h-27.7v-5.5zm101.5-10.1c-20.1 1.7-36.7 4.8-49.1 7.9l-16.9-16.9 26.3-26.3c1.6-1.6 3.8-2.5 6.1-2.5s4.5.9 6.1 2.5l27.5 27.5v7.8zm-68.9 15.5c9.7-3.5 33.9-10.9 68.9-13.8v13.8h-68.9zm68.9-72.7v46.8l-26.2-26.2c-1.9-1.9-4.5-3-7.3-3s-5.4 1.1-7.3 3l-26.3 26.3-.9-.9c-1.9-1.9-4.5-3-7.3-3s-5.4 1.1-7.3 3l-18.8 18.8V225h101.4z"></path><path d="M232.8 254c4.6 0 8.3-3.7 8.3-8.3s-3.7-8.3-8.3-8.3-8.3 3.7-8.3 8.3 3.7 8.3 8.3 8.3zm0-14.9c3.6 0 6.6 2.9 6.6 6.6s-2.9 6.6-6.6 6.6-6.6-2.9-6.6-6.6 3-6.6 6.6-6.6z"></path></svg>
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="image_with_text_right image_with_text_content-{{ section.settings.desktop_content_alignment }}">
                {%- for block in section.blocks -%}
                    {% case block.type %}
                        {%- when 'caption' -%}
                        <div class="image_with_text_right_text m-0 heading_txt">{{ block.settings.image_with_text_heading }}</div>
                        <div class="image_with_text_content"> 
                            {%- when 'heading' -%}
                            <h2 class="image_with_text_content_title m-0 heading_title">{{ block.settings.image_with_text_title }}</h2>
                            {%- when 'text' -%}
                            <p class="image_with_text_content_text m-0 heading_para">{{ block.settings.image_with_text_content_text }}</p>
                            {%- when 'button' -%}
                            {% if block.settings.image_with_text_content_url !=blank %}
                            <a class="brand_contex_btn button_all" href="{{ block.settings.image_with_text_content_url }}">{{ block.settings.image_with_text_btn_txt }}</a>
                            {% endif %}
                        </div>
                            {%- when 'list' -%}
                            {% if block.settings.list_content_text !=blank %}
                            <li class="d-flex image_with_text_info">{% render 'list_icon' %} <span class="home_product_cont">{{ block.settings.list_content_text }}</span></li>
                                {% endif %}
                    {%- endcase -%}
                {%- endfor -%}
            </div>
        </div>
    </div>
</section>


{% schema %}
{
    "name" : "Image With Text Section",
    "settings" : [
    {
        "type": "image_picker",
        "id" : "image_with_text_image",
        "label" : "Image With Text Image"
    },
    {
        "type": "select",
        "id": "layout",
        "options": [
          {
            "value": "image_first",
            "label": "image first"
          },
          {
            "value": "text_first",
            "label": "image second"
          }
        ],
        "default": "image_first",
        "label": "Desktop image placement"
    },   
    {
        "type": "select",
        "id": "desktop_content_alignment",
        "options": [
          {
            "value": "left",
            "label": "left"
          },
          {
            "value": "center",
            "label": "center"
          },
          {
            "value": "right",
            "label": "right"
          }
        ],
        "default": "left",
        "label": "content alignment"
    }
    ],
    "blocks": [
    {
        "type": "caption",
        "name": "caption",
        "limit": 1,
        "settings": [
            {
                "type": "text",
                "id" : "image_with_text_heading",
                "default": "Lorem ipsum dolor sit amet,",
                "label" : "Image With Text Small Title"
            }
        ]
    },
    {
        "type": "heading",
        "name": "heading",
        "limit": 1,
        "settings": [
            {
                "type" : "text",
                "id" : "image_with_text_title",
                "default": "Lorem Ipsum Placeholder Dummy Text Dolor Sit Amet",
                "label" : "Image With Text Big Title"
            }
        ]
    },
    {
        "type": "text",
        "name": "text",
        "limit": 1,
        "settings": [
            {
                "type" : "textarea",
                "id" : "image_with_text_content_text",
                "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elitCondime sagittis ornare interdum eleifend cursus proin urna eu Lorem ipsum dolor sit amet, consectetur adipiscing elitCondime ",
                "label" : "Image With Text Content"
            }
        ]
    },
    {
        "type": "button",
        "name": "button",
        "limit": 1,
        "settings": [
            {
                "type" : "text",
                "id" : "image_with_text_btn_txt",
                "default": "Read More",
                "label" : "Image With Text Button"
            },
            {
                "type" : "url",
                "id" : "image_with_text_content_url",
                "label" : "Image With Text Button Url"
            }
        ]
    },
    {
        "type": "list",
        "name": "list",
        "settings": [
            {
                "type": "text",
                "id": "list_content_text",
                "label": "Home Product List"
            }
        ]
    }
    ],
    "presets" : [
    {
        "name" : {
            "en" : "image with text section"
        },
        "category" : {
            "en" : "home page section"
        }
    }
    ]
}
{% endschema %}